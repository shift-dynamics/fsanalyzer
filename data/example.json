{
    "description": "Example suspension layout",
    "units": {
        "linear": "mm",
        "angular": "degrees"
    },
    "drive_train": {
        "front_chainrings": [32],
        "rear_chainrings": [10, 12, 14, 16, 18, 21, 24, 28, 32, 36, 42, 50]
    },
    "wheels": {
        "front": {
            "diameter": 752.0,
            "comment": "based off of 29x2.6\" Schwalbe Nobby Nic: https://www.mtbr.com/threads/schwalbe-nobby-nic-or-similar-29-x-2-6-outside-diameter.1045726/"
        },
        "rear": { 
            "diameter": 752.0,
            "comment": "based off of 29x2.6\" Schwalbe Nobby Nic: https://www.mtbr.com/threads/schwalbe-nobby-nic-or-similar-29-x-2-6-outside-diameter.1045726/",
            "attachment_link": "seat_stay_link",
            "chain_stay_length": 432.0
        }
    },
    "center_of_mass": {
        "height": 1150.0,
        "comment": "height based off of https://www.pinkbike.com/news/behind-the-numbers-enduro-category-round-up.html, actual CoM should be adjusted for frame size and rider"
    },
    "shock": {
        "eye_to_eye": 190.0,
        "stroke": 45.0
    },
    "fork": {
       "axle_to_crown": 537.0,
       "offset": 44.0,
       "travel": 130.0 
    },
    "links": [
        {
            "name": "front_triangle",
            "description": "origin at bottom bracket, front triangle is a reserved key word, front suspension kinematics will be added to front triangle based on fork dimensions, stack and reach",
            "stack": 622.0,
            "reach": 475.0,
            "bb_drop": 40.0,
            "head_tube_angle": 66.0,
            "frames": [
                {
                    "name": "chain_stay_attachment",
                    "offset": [40.0, 20.0]
                },
                {
                    "name": "rocker_link_attachment",
                    "offset": [100.0, 10.0]
                },
                {   
                    "name": "shock_attachment",
                    "offset": [30.0, 40.0]
                }
            ]
        },
        {
            "name": "chain_stay_link",
            "description": "origin at proximal end of link (closer to bike front triangle)",
            "frames": [
                {
                    "name": "distal",
                    "offset": [-400.0, -20.0]
                }
            ]
        },
        {
            "name": "seat_stay_link",
            "description": "origin at rear wheel axle",
            "frames": [
                {
                    "name": "chain_stay_attachment",
                    "offset": [40.0, -10.0]
                },
                {
                    "name": "rocker_link_attachment",
                    "offset": [400.0, 200.0]
                }
            ]
        },
        {
            "name": "rocker_link",
            "description": "origin at attachment to frame front triangle",
            "frames": [
                {
                    "name": "seat_stay_attachment",
                    "offset": [-30.0, 20.0]
                },
                {
                    "name": "shock_attachment",
                    "offset": [30.0, 25.0]
                }
            ]
        }
    ],
    "joints": [
        {
            "name": "A",
            "link_frame_pair:": [
                ["front_triangle", "chain_stay_attachment"],
                ["chain_stay_link", "origin"]
            ],
            "initial_position": 0.0
        },
        {
            "name": "B",
            "link_frame_pair": [
                ["chain_stay_link", "distal"],
                ["seat_stay_link", "chain_stay_attachment"]
            ],
            "initial_position": 0.0
        },
        {
            "name": "C",
            "link_frame_pair": [
                ["seat_stay_link", "rocker_link_attachment"],
                ["rocker_link", "chain_stay_attachment"]
            ]
        },
        {
            "name": "D",
            "link_frame_pair": [
                ["rocker_link", "shock_attachment"],
                ["shock_upper", "origin"]
            ],
            "initial_position": 0.0
        },
        {
            "name": "E",
            "link_frame_pair": [
                ["shock_lower", "origin"],
                ["front_triangle", "shock_attachment"]
            ],
            "initial_position": 0.0
        }
    ]
}
